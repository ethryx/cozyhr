<div class="section">
  <div class="content">
    Manage the employees at <strong><%- req.session.company.name %></strong> from here.
  </div>
</div>

<div class="sectionSpace"></div>

<div class="section">
  <div class="header">
    Employees
  </div>

  <div class="content">

    <table id="companyEmployees" class="display" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th class="left-align" width="50%">Employee</th>
          <th class="left-align" width="35%">Job Title (Role)</th>
          <th width="15%">Office</th>
        </tr>
      </thead>

      <tbody>
      <% for(var i = 0; i < employees.length; i++) { %>
        <tr>
          <td data-order="<%= employees[i].lastName + ', ' + employees[i].firstName %>">
            <a href="/admin/employee/<%= employees[i].id %>"><div class="picture" style="background-image:url('<%= employees[i].picture %>')"></div></a>
            <a href="/admin/employee/<%= employees[i].id %>"><div class="name"><%= employees[i].lastName + ', ' + employees[i].firstName %></div></a>
          </td>
          <td><a href="/admin/role/"><div class="position"><%= employees[i].models.permission.jobTitle %></div></a></td>
          <td><div class="office">NYC</div></td>
        </tr>
      <% } %>
      </tbody>
    </table>

  </div>
</div>