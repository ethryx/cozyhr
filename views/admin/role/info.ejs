<div class="section">
  <div class="header">
    <%= role.jobTitle %> Information
  </div>

  <div class="content">
    <div id="roleContainer">

      <!-- Name -->
      <div class="settingWrapper">
        <div class="info">
          <div class="title">Name</div>
          <div class="subtitle">The name of the role.</div>
        </div>
        <div class="setting"><input type="text" id="txtRoleName" value="<%= role.jobTitle %>"></div>
      </div>

      <!-- PTO Accrual Rate -->
      <div class="settingWrapper">
        <div class="info">
          <div class="title">PTO Accrual Rate</div>
          <div class="subtitle">Determine how fast this role accrues PTO.</div>
        </div>
        <div class="setting" id="ptoAccrualContainer"></div>
      </div>

      <!-- Sick Time Accrual Rate -->
      <div class="settingWrapper">
        <div class="info">
          <div class="title">Sick Time Accrual Rate</div>
          <div class="subtitle">Determine how fast this role accrues sick time.</div>
        </div>
        <div class="setting" id="sickAccrualContainer"></div>
      </div>

      <!-- Vacation Time Accrual Rate -->
      <div class="settingWrapper">
        <div class="info">
          <div class="title">Vacation Time Accrual Rate</div>
          <div class="subtitle">Determine how fast this role accrues Vacation Time.</div>
        </div>
        <div class="setting" id="vacaAccrualContainer"></div>
      </div>

      <!-- Save -->
      <div class="settingWrapper">
        <div class="info">
          <div class="title green">Save</div>
          <div class="subtitle green">Be sure to save when you're done!</div>
        </div>
        <div class="setting"><input type="button" id="btnSaveSettings" value="Save Settings"></div>
      </div>

    </div>
  </div>
</div>

<div class="sectionSpace"></div>

<div class="section">
  <div class="header red">
    Danger Zone
  </div>

  <div class="content">

    <!-- Delete Role -->
    <div class="settingWrapper">
      <div class="info">
        <div class="title red">Delete Role</div>
        <div class="subtitle red">If you would like to delete the role entirely, you can click the button below. <strong>There is no way to undo this action.</strong></div>
      </div>
      <div class="setting"><input type="button" id="btnDeleteRole" class="red" value="Delete Role"></div>
    </div>

  </div>
</div>

<script>
  CozyHR.roleId = "<%- role.id %>";
  CozyHR.pageHelper.queue('CozyHR.pageHelper.instance.initRole()');
</script>