<div id="pageTimeclock">

	<div class="row">
		<div class="3u sectionContainer sectionWorkingOn">
			<div class="section">
				<div class="header green">
						Clocked In
				</div>
				<div class="content green">
					You're currently clocked in to <strong>Live Chat</strong>.
				</div>
			</div>

			<div class="sectionSpace"></div>

			<div class="section">
				<div class="header">
						Clock In / Out
				</div>
				<div class="content">
					<div class="label">Where are you working?</div>
					<!-- Office Selection -->
					<div class="office">
						<select id="selOffice">
							<% for(var i = 0; i < offices.length; i++) { %>
							<option value="<%= offices[i].id %>"><%= offices[i].name %></option>
							<% } %>
						</select>
					</div>
					<div class="label">What are you working on?</div>
					<div id="sectionClockablePositions">
						<!-- Loaded via Mustache -->
					</div>
				</div>
			</div>
		</div>

		<div class="9u sectionContainer sectionTimeclock">
			<div class="clocksContainer">
				<div class="head">
					<div class="columnTitle worked">Worked</div>
					<div class="columnTitle clockinout">Clocked In</div>
					<div class="columnTitle clockinout">Clocked Out</div>
					<div class="columnTitle total">Total Time</div>
				</div>
				<div id="clocks">
					<div class="loading"><i class="fa fa-spinner fa-spin"></i></div>
				</div>
			</div>
		</div>
	</div>

</div>

<!-- Initialize Script -->
<script>
	CozyHR.pageHelper.init( CozyHR.pageHelpers.timeclock );
</script>