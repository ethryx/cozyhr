<!DOCTYPE html>
<html>
  <head>
    <title>CozyHR</title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <!-- jQuery -->
    <script src="/js/vendor/jquery-1.11.1.min.js"></script>
    <!-- skelJS -->
    <script src="/js/vendor/skel.0.4.9.min.js">
    {
      prefix: '/styles/style',
      normalizeCSS: true,
      boxModel: 'border',
      grid: { gutters: 20 },
      breakpoints: {
        wide: { range: "1200-", containers: 1140, grid: { gutters: 20 } },
        narrow: { range: "481-1199", containers: 960 },
        mobile: { range: "-480", containers: "fluid", lockViewport: true, grid: { collapse: true } }
      }
    }
    </script>
    <script src="/js/vendor/skel-panels.0.4.9.min.js">
    <% if(req.session.authenticated) { %>
    {
      overlays: {
        topMenu: {
          position: "top-left",
          width: "100%",
          height: 41
        },

        bottomMenu: {
          position: "bottom-left",
          width: "100%",
          height: 41
        }
      }
    }
    <% } %>
    </script>

    <!--STYLES-->
    <link rel="stylesheet" href="/linker/vendor/jquery.qtip.2.2.0/jquery.qtip.2.2.0.min.css">
    <!--STYLES END-->

    <!--SCRIPTS-->
    <script src="/linker/js/client.js"></script>
    <script src="/linker/js/dashboard.js"></script>
    <script src="/linker/js/timeclock.js"></script>
    <script src="/linker/vendor/jquery.noty.2.2.4/jquery.noty.packaged.2.2.4.min.js"></script>
    <script src="/linker/vendor/jquery.qtip.2.2.0/jquery.qtip.2.2.0.min.js"></script>
    <!--SCRIPTS END-->

  </head>

  <body>
    <% if(req.session.authenticated) { %>
      <%- partial('topbar') %>
    <% } %>

    <div id="mainContainer" class="container">
      <%- body %>
    </div>

    <% if(req.session.authenticated) { %>
      <%- partial('bottombar') %>
    <% } %>

